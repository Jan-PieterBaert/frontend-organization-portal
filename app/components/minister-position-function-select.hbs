<PowerSelect
  @allowClear={{true}}
  @loadingMessage="Aan het laden..."
  @noMatchesMessage="Geen resultaten"
  @searchEnabled={{true}}
  @searchMessage="Typ om te zoeken"
  @searchField="label"
  @options={{this.fetchMinisterPositionFunctionsTask.last}}
  @selected={{@selected}}
  @onChange={{@onChange}}
  @triggerId={{@id}}
  as |positionFunction|
>
  {{positionFunction.label}}
</PowerSelect>