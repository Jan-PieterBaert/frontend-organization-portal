<PowerSelect
  @allowClear={{true}}
  @searchEnabled={{true}}
  @loadingMessage="Aan het laden..."
  @noMatchesMessage="Geen resultaten"
  @searchMessage="Typ om te zoeken"
  @searchField="label"
  @options={{this.recognizedWorshipTypes}}
  @selected={{@selected}}
  @onChange={{@onChange}}
  @triggerId={{@id}}
  as |recognizedWorshipType|
>
  {{recognizedWorshipType.label}}
</PowerSelect>

