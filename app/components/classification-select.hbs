<PowerSelect
  @allowClear={{true}}
  @loadingMessage="Aan het laden..."
  @noMatchesMessage="Geen resultaten"
  @searchMessage="Typ om te zoeken"
  @searchField="label"
  @options={{this.fetchClassificationTask.last}}
  @selected={{@selected}}
  @onChange={{@onChange}}
  @triggerId={{@id}}
  as |classification|
>
  {{classification.label}}
</PowerSelect>