<PowerSelect
  @allowClear={{true}}
  @searchEnabled={{true}}
  @loadingMessage="Aan het laden..."
  @noMatchesMessage="Geen resultaten"
  @searchMessage="Typ om te zoeken"
  @searchField="label"
  @search={{perform this.loadScopesTask}}
  @options={{this.scopes}}
  @selected={{@selected}}
  @onChange={{@onChange}}
  as |scope|
>
  {{scope.label}}
</PowerSelect>