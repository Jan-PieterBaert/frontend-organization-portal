<PowerSelect
  @allowClear={{true}}
  @searchEnabled={{true}}
  @loadingMessage="Aan het laden..."
  @noMatchesMessage="Geen resultaten"
  @searchMessage="Typ om te zoeken"
  @searchField="name"
  @options={{this.representativeBodies}}
  @selected={{@selected}}
  @onChange={{@onChange}}
  @triggerId={{@id}}
  as |representativeBody|
>
  {{representativeBody.name}}
</PowerSelect>